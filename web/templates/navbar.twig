{% embed 'modal' with { id: "login-modal", title: "Login" } only %}
{% block body %}
{% import 'bs3-forms' as forms %}
{{ forms.start() }}
{{ forms.input('username', type='text', label='Username', required = true) }}
{{ forms.input('password', type='password', label='Password', required = true) }}
{{ forms.button('Submit') }}
{{ forms.end() }}
{% endblock %}
{% endembed %}

{% embed 'modal' with { id: "register-modal", title: "Register" } only %}
{% block body %}
{% import 'bs3-forms' as forms %}
{{ forms.start() }}
{{ forms.input('username', type='text', label='Username', required = true) }}
{{ forms.input('email', type='text', label='E-mail', required = true) }}
{{ forms.input('password', type='password', label='Password', required = true) }}
{{ forms.input('password_ver', type='password', label='Verify Password', required = true) }}
{{ forms.button('Submit') }}
{{ forms.end() }}
{% endblock %}
{% endembed %}

